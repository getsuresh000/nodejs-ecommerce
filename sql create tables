/*USERS TABLE */

CREATE TABLE `ecom`.`users` (
  `userId` INT NOT NULL AUTO_INCREMENT,
  `fullname` VARCHAR(45) NULL,
  `email` VARCHAR(45) NULL,
  `password` VARCHAR(45) NULL,
  `address` VARCHAR(45) NULL,
  `city` VARCHAR(45) NULL,
  `state` VARCHAR(45) NULL,
  `mobile` INT NULL,
  'role' VARCHAR(45) NULL,
  PRIMARY KEY (`id`),
  UNIQUE INDEX `email_UNIQUE` (`email` ASC) VISIBLE,
  UNIQUE INDEX `mobie_UNIQUE` (`mobie` ASC) VISIBLE);


/*Sellers Table */

CREATE TABLE `ecom`.`sellers` (
  `sellerId` INT NOT NULL AUTO_INCREMENT,
  `userId` VARCHAR(45) NULL,
  `gstin` VARCHAR(45) NULL,
  `regDate` VARCHAR(45) NULL,
  PRIMARY KEY (`sellerId`));

/*Customers Table */

  CREATE TABLE `ecom`.`customers` (
  `customerId` INT NOT NULL,
  `billingAddress` VARCHAR(45) NULL,
  `deliveryAddress` TEXT(100) NULL,
  `userId` TEXT(100) NULL,
  PRIMARY KEY (`customerId`));

/*Vendor Table */
CREATE TABLE `ecom`.`vendors` (
  `vendorId` INT NOT NULL AUTO_INCREMENT,
  `userId` VARCHAR(45) NULL,
  PRIMARY KEY (`vendorId`));

/* PRODUCTS TABLE */

CREATE TABLE `ecom`.`products` (
  `productId` INT NOT NULL AUTO_INCREMENT,
  `category` VARCHAR(45) NULL,
  `title` VARCHAR(45) NULL,
  `price` VARCHAR(45) NULL,
  `description` MEDIUMTEXT NULL,
  `quantity` VARCHAR(45) NULL,
  `sellerId` int(11) NULL,
  PRIMARY KEY (`id`));

/*ORDERS TABLE */

CREATE TABLE `ecom`.`orders` (
  `orderId` INT NOT NULL AUTO_INCREMENT,
  `userId` INT NULL,
  `orderDate` DATETIME NULL,
  `totalAmount` DECIMAL(10,2) NULL,
  `status` VARCHAR(45) NULL,
  PRIMARY KEY (`id`));



/*ITEM_DETAILS TABLE */

CREATE TABLE `ecom`.`itemdetails` (
  `id` INT NOT NULL,
  `orderId` int(11) NULL,
  `productId` int(11) NULL,
  `quantity` VARCHAR(45) NULL,
  PRIMARY KEY (`id`));

/*Payments Table */

CREATE TABLE `ecom`.`payments` (
  `paymentId` INT(11) NOT NULL AUTO_INCREMENT,
  `paymentDate` VARCHAR(45) NULL,
  `orderId` INT(11) NULL,
  `transactionId` VARCHAR(45) NULL,
  `paymentmode` VARCHAR(45) NULL,
  `amount` VARCHAR(45) NULL,
  PRIMARY KEY (`paymentId`));


